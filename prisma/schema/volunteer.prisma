model Volunteer {
  id    String  @id @default(uuid())
  name  String?
  email String  @unique

  phone          String?
  gender         Gender?
  ethinicity     Ethinicity?
  languages      Volunteer_Language[]
  availabilities Volunteer_Availability[]
  certifications Volunteer_Certification[]
  hourLogs       Volunteer_Hour_Log[]
  events         RSVP[]

  emailVerified Boolean   @default(false)
  imageURL      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  sessions      Session[]
  accounts      Account[]
  user          User?     @relation(fields: [userId], references: [id])
  userId        String?   @unique

  @@map("volunteers")
}

model Volunteer_Language {
  language    Language
  Volunteer   Volunteer @relation(fields: [volunteerId], references: [id])
  volunteerId String

  @@id([volunteerId, language])
  @@map("volunteer_languages")
}

model Volunteer_Hour_Log {
  id             Int            @id @default(autoincrement())
  volunteer      Volunteer      @relation(fields: [volunteerId], references: [id])
  volunteerId    String
  event          Event          @relation(fields: [eventId], references: [id])
  eventId        String
  clockIn        DateTime
  clockOut       DateTime?
  approvalStatus ApprovalStatus @default(PENDING)
  comment        String?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("volunteer_hour_logs")
}

model Volunteer_Availability {
  volunteer    Volunteer    @relation(fields: [volunteerId], references: [id])
  volunteerId  String
  availability Availability

  @@id([volunteerId, availability])
  @@map("volunteer_availabilities")
}

model Volunteer_Certification {
  volunteer     Volunteer @relation(fields: [volunteerId], references: [id])
  volunteerId   String
  certification String

  @@id([volunteerId, certification])
  @@map("volunteer_certifications")
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum Availability {
  WEEKDAY_MORNING
  WEEKDAY_AFTERNOON
  WEEKDAY_EVENING
  WEEKEND_MORNING
  WEEKEND_AFTERNOON
}

enum Ethinicity {
  WHITE
  BLACK_OR_AFRICAN_AMERICAN
  ALASKA_NATIVE
  ASIAN
  NATIVE_HAWAIIAN_OR_OTHER_PACIFIC_ISLANDER
  MIDDLE_EASTERN_OR_NORTH_AFRICAN
  HISPANIC
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

