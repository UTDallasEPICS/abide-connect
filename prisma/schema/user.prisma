model User_Language {
  user     User     @relation(fields: [userId], references: [id])
  userId   String
  language Language

  @@id([userId, language])
  @@map("user_languages")
}

model User_Notification {
  user           User         @relation(fields: [userId], references: [id])
  userId         String
  notification   Notification @relation(fields: [notificationId], references: [id])
  notificationId String

  @@id([userId, notificationId])
  @@map("user_notifications")
}

enum Language {
  ENGLISH
  SPANISH
  FRENCH
  GERMAN
  CHINESE
  JAPANESE
  HINDI
  ARABIC
  RUSSIAN
  PORTUGUESE
  ITALIAN
  KOREAN
  DUTCH
  SWEDISH
  NORWEGIAN
  DANISH
  FINNISH
  POLISH
  TURKISH
  GREEK
  HEBREW
  VIETNAMESE
  THAI
  INDONESIAN
  MALAY
  FILIPINO
}
